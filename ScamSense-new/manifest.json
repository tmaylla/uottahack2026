{
  "manifest_version": 3,
  "name": "Phish.net",
  "description": "Check if a URL or message is a scam",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "backround.js"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
"https://uottahack2026.onrender.com/*" ,
        "<all_urls>"
]
}

